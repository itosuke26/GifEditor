<Window x:Class="GifEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GIF編集ツール" Height="800" Width="600">
    <Grid>
        <TabControl>
            <TabItem Header="GIF編集">
                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="入力GIFファイル:" Margin="5"/>
                    <Button Content="GIFファイル選択" Click="OnSelectGifFile" Margin="5"/>
                    <TextBox x:Name="GifInputPath" Width="300" Margin="5" IsReadOnly="True"/>

                    <TextBlock Text="フレームレート (FPS):" />
                    <TextBox x:Name="FrameRateInput" Width="100" Margin="5"/>

                    <CheckBox x:Name="OptimizePaletteCheckBox" Content="カラーパレット最適化" Margin="5"/>

                    <Button Content="FPS,カラーパレット最適化" Click="OnOptimizeGifClicked" Margin="5"/>

                    <Button Content="GIFリサイズ" Click="OnResizeGifClicked" Margin="5"/>

                    <TextBox x:Name="ResizeWidthInput" Width="100" Margin="5"/>

                    <TextBox x:Name="ResizeHeightInput" Width="100" Margin="5"/>

                    <Button Content="GIFサイズ圧縮" Click="OnCompressGifToTargetSizeClicked" Margin="5"/>

                    <TextBox x:Name="TargetSizeInput" Width="100" Margin="5"/>

                    <Button Content="GIFを切り抜く" Click="OnCropGifClicked" Margin="5"/>
                    <TextBlock Text="X 座標:" Margin="5"/>
                    <TextBox x:Name="XInput" Width="100" Margin="5"/>
                    <TextBlock Text="Y 座標:" Margin="5"/>
                    <TextBox x:Name="YInput" Width="100" Margin="5"/>
                    <TextBlock Text="幅:" Margin="5"/>
                    <TextBox x:Name="WidthInput" Width="100" Margin="5"/>
                    <TextBlock Text="高さ:" Margin="5"/>
                    <TextBox x:Name="HeightInput" Width="100" Margin="5"/>

                    <ProgressBar x:Name="ProgressBar" Width="300" Height="20" Margin="5" Visibility="Hidden"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="動画変換">
                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="入力動画ファイル:" Margin="5"/>
                    <Button Content="動画ファイル選択" Click="OnSelectVideoInputFile" Margin="5"/>
                    <TextBox x:Name="VideoInputPath" Width="300" Margin="5" IsReadOnly="True"/>

                    <TextBlock Text="入力GIFファイル:" Margin="5"/>
                    <Button Content="GIFファイル選択" Click="OnSelectGifForVideo" Margin="5"/>
                    <TextBox x:Name="GifInputPathForVideo" Width="300" Margin="5" IsReadOnly="True"/>

                    <Button Content="MKV → MP4 変換" Click="OnConvertMkvToMp4Clicked" Margin="5"/>
                    <Button Content="MP4 → GIF 変換" Click="OnConvertMp4ToGifClicked" Margin="5"/>
                    <Button Content="GIF → MP4 変換" Click="OnConvertGifToMp4Clicked" Margin="5"/>

                    <ProgressBar x:Name="VideoProgressBar" Width="300" Height="20" Margin="5" Visibility="Hidden"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="画像処理">
                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="入力GIFファイル:" Margin="5"/>
                    <Button Content="GIFファイル選択" Click="OnSelectImageServiceGifFile" Margin="5"/>
                    <TextBox x:Name="ImageServiceGifInputPath" Width="300" Margin="5" IsReadOnly="True"/>

                    <TextBlock Text="リサイズ幅:" Margin="5"/>
                    <TextBox x:Name="ImageServiceResizeWidthInput" Width="100" Margin="5"/>

                    <TextBlock Text="リサイズ高さ:" Margin="5"/>
                    <TextBox x:Name="ImageServiceResizeHeightInput" Width="100" Margin="5"/>

                    <Button Content="GIFリサイズ" Click="OnImageServiceResizeGifClicked" Margin="5"/>

                    <TextBlock Text="出力画像形式:" Margin="5"/>
                    <ComboBox x:Name="ImageServiceOutputFormatComboBox" Width="150" Margin="5">
                        <ComboBoxItem Content="PNG"/>
                        <ComboBoxItem Content="JPEG"/>
                        <ComboBoxItem Content="BMP"/>
                    </ComboBox>

                    <Button Content="最初のフレームを変換" Click="OnImageServiceConvertGifToImageClicked" Margin="5"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>