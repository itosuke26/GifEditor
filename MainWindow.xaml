<Window x:Class="GifEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GIF編集ツール" Height="600" Width="500">
    <Grid>
        <TabControl>
            <!-- GIF編集タブ -->
            <TabItem Header="GIF編集">
                <StackPanel Orientation="Vertical" Margin="10">

                    <TextBlock Text="入力GIFファイル:" Margin="5"/>
                    <Button Content="GIFファイル選択" Click="OnSelectGifFile" Margin="5"/>
                    <TextBox x:Name="GifInputPath" Width="300" Margin="5" IsReadOnly="True"/>

                    <!-- フレームレート変更 -->
                    <TextBlock Text="フレームレート (FPS):" />
                    <TextBox x:Name="FrameRateInput" Width="100" Margin="5"/>

                    <CheckBox x:Name="OptimizePaletteCheckBox" Content="カラーパレット最適化" Margin="5"/>

                    <Button Content="FPS,カラーパレット最適化" Click="OnOptimizeGifClicked" Margin="5"/>
                    <Button Content="GIFを最適化" Click="OnCompressGifClicked" Margin="5"/>
                    <Button Content="GIFを切り抜く" Click="OnCropGifClicked" Margin="5"/>

                    <TextBlock Text="X 座標:" Margin="5"/>
                    <TextBox x:Name="XInput" Width="100" Margin="5"/>
                    <TextBlock Text="Y 座標:" Margin="5"/>
                    <TextBox x:Name="YInput" Width="100" Margin="5"/>
                    <TextBlock Text="幅:" Margin="5"/>
                    <TextBox x:Name="WidthInput" Width="100" Margin="5"/>
                    <TextBlock Text="高さ:" Margin="5"/>
                    <TextBox x:Name="HeightInput" Width="100" Margin="5"/>

                    <ProgressBar x:Name="ProgressBar" Width="300" Height="20" Margin="5" Visibility="Hidden"/>
                </StackPanel>
            </TabItem>

            <!-- 動画変換タブ -->
            <TabItem Header="動画変換">
                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="入力動画ファイル:" Margin="5"/>
                    <Button Content="ファイル選択" Click="OnSelectVideoInputFile" Margin="5"/>
                    <TextBox x:Name="VideoInputPath" Width="300" Margin="5" IsReadOnly="True"/>

                    <!-- 動画変換ボタン -->
                    <Button Content="MKV → MP4 変換" Click="OnConvertMkvToMp4Clicked" Margin="5"/>
                    <Button Content="MP4 → GIF 変換" Click="OnConvertMp4ToGifClicked" Margin="5"/>

                    <ProgressBar x:Name="VideoProgressBar" Width="300" Height="20" Margin="5" Visibility="Hidden"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>